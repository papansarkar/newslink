{
  "name": "newslink",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "check": "biome check --write .",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:admin": "turbo -F admin dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @newslink/db db:push",
    "db:studio": "turbo -F @newslink/db db:studio",
    "db:generate": "turbo -F @newslink/db db:generate",
    "db:migrate": "turbo -F @newslink/db db:migrate",
    "db:start": "turbo -F @newslink/db db:start",
    "db:watch": "turbo -F @newslink/db db:watch",
    "db:stop": "turbo -F @newslink/db db:stop",
    "db:down": "turbo -F @newslink/db db:down"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "turbo": "^2.5.4",
    "@biomejs/biome": "2.3.6",
    "ultracite": "6.3.4",
    "tsdown": "^0.15.5",
    "@types/bun": "^1.2.6"
  },
  "packageManager": "pnpm@10.15.1"
}
